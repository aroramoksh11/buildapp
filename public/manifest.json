{
  "name": "Self-Driving PWA",
  "short_name": "AutoDrive",
  "description": "A self-driving car simulation PWA",
  "id": "autodrive-pwa",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#FFFFFF",
  "theme_color": "#000000",
  "orientation": "portrait",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/maskable-icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/maskable-icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "launch_handler": {
    "client_mode": ["auto", "focus-existing"]
  },
  "shortcuts": [
    {
      "name": "Start Simulation",
      "short_name": "Start",
      "description": "Start a new simulation",
      "url": "/simulation",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/simulation.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Simulation View"
    }
  ],
  "categories": ["simulation", "automotive", "education"],
  "prefer_related_applications": false,
  "scope": "/",
  "display_override": ["window-controls-overlay"]
} 